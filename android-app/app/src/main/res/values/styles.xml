<resources>

    <style name="Widget.Theme.ThermHome.MyView" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">#353535</item>
        <item name="fontFamily">@font/quicksand</item>
    </style>

    <style name="Widget.ThermHome.AppWidget.Container" parent="android:Widget">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.ThermHome.AppWidget.InnerView" parent="android:Widget">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Theme.ThermHome.MyView.FloatingButton" parent="">
        <item name="fontFamily">@font/quicksand</item>
        <item name="tint">@color/cardview_dark_background</item>
        <item name="android:backgroundTint">@color/light_blue_400</item>
    </style>

    <style name="Widget.Theme.ThermHome.MyView.ScheduleButton" parent="">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="Dialog" parent="@style/Theme.Design.NoActionBar">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Label" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LabelComment" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Caption_settings" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_blue_400</item>
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginVertical">16dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>